<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @exhibition.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @exhibition.artist %>
</p>

<p>
  <strong>Gallery:</strong>
<a href="/galleries/<%=@exhibition.gallery.id%>">  <%= @exhibition.gallery.name %></a>
</p>

<p>
  <strong>Opening date:</strong>
  <%= @exhibition.opening_date %>
</p>

<p>
  <strong>Closing date:</strong>
  <%= @exhibition.closing_date %>
</p>

<p>
  <strong>Image:</strong>
  <%= @exhibition.image %>
</p>

<p>
  <strong>Body:</strong>
  <%= @exhibition.body %>
</p>


<p>
  <strong>Reviews:</strong>
  <ul>
    <% @exhibition.reviews.each do |review| %>
      <li>
        <strong><%= review.title %></strong>
        <%= review.author %>
        <%= review.date %>
        <%= review.body %>
        <%= review.rating %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Review this exhibition:</strong>
</p>
<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <% @review.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
  <% end %>

  <%= f.hidden_field :exhibition_id, value: params[:id] %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_select :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "Rating: (0-5)"  %>
    <%= f.number_field :rating, class: 'form-control', limit: { minimum: 0, maximum: 5 } %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Edit', edit_exhibition_path(@exhibition) %> |
<%= link_to 'Back', exhibitions_path %>
