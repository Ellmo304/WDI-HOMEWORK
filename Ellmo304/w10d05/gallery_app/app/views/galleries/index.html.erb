<p id="notice"><%= notice %></p>

<h1>Galleries</h1>
<br>


<% @galleries.each do |gallery| %>
<div class="col-md-4 galleryCard">
<a href="/galleries/<%=gallery.id%>">
<h3><%= gallery.name %></h3>
<%= image_tag gallery.image, width: 350 %>
<h6><%= gallery.address %></h6>
<h6>Nearest tube: <%= gallery.nearest_tube %></h6>
</a>
</div>
<% end %>

<br>
<button class="big">
<% if logged_in? %>
<%= link_to 'Click here to add a new gallery', new_gallery_path %>
<% end %>
</button>
