<p id="notice"><%= notice %></p>

<h1>
  <%= @gallery.name %>
</h1>

<p>
  <strong>Address:</strong>
  <%= @gallery.address %>
</p>


<p>
  <strong>Nearest tube:</strong>
  <%= @gallery.nearest_tube %>
</p>

<p>
  <%= image_tag @gallery.image, width: 550 %>
</p>

<p>
  <strong>Current Exhibtions:</strong>
  <ul>
    <% @gallery.exhibitions.each do |exhibition| %>
    <a href="/exhibitions/<%=exhibition.id%>"><li><%=exhibition.name%></li></a>
    <% end %>
  </ul>
</p>

<p>
  <strong>Info:</strong>
  <%= @gallery.body %>
</p>

<% if logged_in? %>
<%= link_to 'Edit Gallery', edit_gallery_path(@gallery) %> |
<%= link_to 'Delete Gallery', @gallery, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', galleries_path %>
